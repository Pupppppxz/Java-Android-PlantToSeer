<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbg"
    android:padding="20dp"
    tools:context=".profile.EditProfileFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_round_edit_24" />

            <TextView
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="Edit user profile"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:fontFamily="@font/font_family"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/rounded_all_border_linearlayout"
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/font_family"
                android:text="First Name"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/edit_profile_firstname"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/light_gray"
                android:textSize="20dp"
                android:fontFamily="@font/font_family"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/font_family"
                android:text="Last Name"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/edit_profile_lastname"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/light_gray"
                android:textSize="20dp"
                android:fontFamily="@font/font_family"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/font_family"
                android:text="Email"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/edit_profile_email"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:backgroundTint="@color/light_gray"
                android:fontFamily="@font/font_family"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/font_family"
                android:text="Password"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/edit_profile_password"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:backgroundTint="@color/light_gray"
                android:textSize="20dp"
                android:fontFamily="@font/font_family"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/font_family"
                android:text="Profile Picture"
                android:textSize="20dp"/>

            <ImageButton
                android:id="@+id/edit_profile_insert_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:backgroundTint="@null"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_insert_image"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/updateProfileBtnReset"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_family"
                    android:background="@drawable/rounded_button_cancel"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:textSize="22dp"
                    android:text="Cancel"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />

                <Button
                    android:id="@+id/updateProfileBtnSubmit"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_family"
                    android:background="@drawable/rounded_button"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:textSize="22dp"
                    android:text="Save"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>